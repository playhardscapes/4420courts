{
  "name": "4420courts-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "4420 Courts customer site and dealer portal monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "dev:customer": "cd apps/customer-site && npm run dev",
    "dev:dealer": "cd apps/dealer-portal && npm run dev",
    "build:customer": "cd apps/customer-site && npm run build",
    "build:dealer": "cd apps/dealer-portal && npm run build"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}